<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agreement_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.26">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.26"
            android:background="@color/mywhite"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.26"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp">

            <TextView
                android:id="@+id/agreement_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.26"
                android:text="By creating an account, I confirm that I am a student or graduate of Infinity Culinary Training. I understand that my details will be sent to ICT for acceptance of my account."
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/logoColor"
                android:textSize="18sp"
                android:typeface="normal" />

            <Button
                android:id="@+id/agreebutton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/agreement_text"
                android:layout_marginTop="78dp"
                android:layout_weight="0.26"
                android:background="@color/logoColorTransparent"
                android:fontFamily="serif"
                android:onClick="onAgreedRegister"
                android:paddingLeft="20dp"
                android:text="I agree"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/mywhite"
                android:textSize="30sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/contact_school_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/agreebutton"
                android:layout_marginTop="63dp"
                android:layout_weight="0.26"
                android:background="@color/editText"
                android:onClick="onContactSchool"
                android:paddingLeft="20dp"
                android:text="Contact the school"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="24sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>