<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mosadi.chefschool.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="25dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="40dp"
        android:orientation="vertical">

        <LinearLayout

        android:id="@+id/address"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/addresstxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Address"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/country"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/countrytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Country"
            android:textAlignment="textStart"

            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_country"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/editText"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="South Africa" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/province"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/provincetxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Province"
            android:textAlignment="viewStart"

            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/editText"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Western Cape" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/city"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/citytxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            android:text="City"
            android:textAlignment="viewStart"

            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_city"
            android:layout_width="match_parent"
            android:background="@color/editText"
            android:layout_height="wrap_content"
            android:layout_weight="1.35"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Cape Town" />


    </LinearLayout>
    <LinearLayout
        android:id="@+id/work_surburb"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/surburbtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Surburb"
            android:textAlignment="textStart"

            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_surburb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/editText"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Mowbray" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="25dp">

            <Button
                android:id="@+id/cancel_address_editing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.42"
                android:background="@drawable/backbutton"

                android:text="Cancel" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="TextView"
                android:textColor="@color/transparent" />

            <Button
                android:id="@+id/saveaddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/savebutton"
                android:paddingRight="10dp"
                android:text="Save" />
        </LinearLayout>

    </LinearLayout>


</FrameLayout>