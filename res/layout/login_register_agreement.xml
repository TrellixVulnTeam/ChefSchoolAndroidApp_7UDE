<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/agreement_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.26">

        <TextView
            android:id="@+id/agreement_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.26"
            android:background="@color/mywhite" />

        <TextView
            android:id="@+id/agreement_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.26"
            android:text="@string/login_register_agreement"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/logoColor"
            android:textSize="18sp"
            android:typeface="normal" />

        <Button
            android:id="@+id/contact_school_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/agreebutton"
            android:layout_marginTop="63dp"
            android:layout_weight="0.26"
            android:background="@color/mywhite"
            android:onClick="onContactSchool"
            android:text="Contact the school"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/agreebutton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="78dp"
            android:layout_weight="0.26"
            android:background="@color/logoColorTransparent"
            android:fontFamily="serif"
            android:onClick="onAgreedRegister"
            android:text="I agree"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/mywhite"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_below="@+id/agreement_text"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</LinearLayout>