<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contact_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.30">

        <TextView
            android:id="@+id/contactschool_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mywhite" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/contact_person"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/contact_person"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contact_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/contact_website"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="12dp"
                android:layout_weight="0.30"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/contact_email"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/contact_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/clear_transport"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="54dp"
                android:layout_weight="0.30"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="@string/contact_website"
                android:textSize="18sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>